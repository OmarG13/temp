name: Custom.DiskCollectUsingDD
type: COMPOUND
parameters:
  - name: Host
    default: ''
    type: TEXT
  - name: Username
    default: ''
    type: TEXT
  - name: Password
    default: ''
    type: TEXT
  - name: DiskDevice
    default: '/dev/sda'
    type: TEXT
  - name: OutputPath
    default: '/tmp/disk_image.dd'
    type: TEXT
sources:
  - precondition: select(size()>0 from clients() where Hostname=parameters.Host)
    query: |
      LET artifacts = [
        {
          "name": "SSH_Command",
          "parameters": {
            "hostname": parameters.Host,
            "username": parameters.Username,
            "password": parameters.Password,
            "command": format("dd if=%s of=%s", parameters.DiskDevice, parameters.OutputPath)
          }
        }
      ]
      FOREACH artifact in artifacts RETURN collect_artifacts(artifact)





name: Custom.DiskCollectUsingDD
type: CLIENT
parameters:
  - name: Host
    default: ''
    type: TEXT
  - name: Username
    default: ''
    type: TEXT
  - name: Password
    default: ''
    type: TEXT
  - name: DiskDevice
    default: '/dev/sda'
    type: TEXT
  - name: OutputPath
    default: '/tmp/disk_image.dd'
    type: TEXT
sources:
  - query: |
      SELECT
        CollectResults(PLATFORM(
          ssh_hostname=parameters.Host,
          ssh_username=parameters.Username,
          ssh_password=parameters.Password,
          command=format("dd if=%s of=%s", parameters.DiskDevice, parameters.OutputPath)
        )) AS result
      FROM scope()




name: Custom.DiskCollectUsingDD
type: CLIENT
parameters:
  - name: Host
    default: ''
    type: TEXT
  - name: Username
    default: ''
    type: TEXT
  - name: Password
    default: ''
    type: TEXT
  - name: DiskDevice
    default: '/dev/sda'
    type: TEXT
  - name: OutputPath
    default: '/tmp/disk_image.dd'
    type: TEXT
sources:
  - query: |
      SELECT
        execve(
          argv=["dd", "if=" + parameters.DiskDevice, "of=" + parameters.OutputPath],
          host=parameters.Host,
          username=parameters.Username,
          password=parameters.Password
        ) AS result
      FROM scope()

---------------------------------------

name: Custom.DiskCollectUsingDD
type: CLIENT
parameters:
  - name: Host
    default: ''
    type: TEXT
  - name: Username
    default: ''
    type: TEXT
  - name: Password
    default: ''
    type: TEXT
  - name: DiskDevice
    default: '/dev/sda'
    type: TEXT
  - name: OutputPath
    default: '/tmp/disk_image.dd'
    type: TEXT
sources:
  - query: |
      LET params = scope()
      SELECT
        ssh(
          hostname=params.Host,
          username=params.Username,
          password=params.Password,
          argv=["/bin/sh", "-c", format("dd if=%s of=%s", params.DiskDevice, params.OutputPath)]
        ) AS result
      FROM scope()


----------------------------


name: Custom.DiskCollectUsingBashShell
type: CLIENT
parameters:
  - name: Host
    default: ''
    type: TEXT
  - name: Username
    default: ''
    type: TEXT
  - name: Password
    default: ''
    type: TEXT
  - name: DiskDevice
    default: '/dev/sda'
    type: TEXT
  - name: OutputPath
    default: '/tmp/disk_image.dd'
    type: TEXT
sources:
  - query: |
      LET params = scope()
      SELECT
        linux.sys.bashshell(
          hostname=params.Host,
          username=params.Username,
          password=params.Password,
          script=format("dd if=%s of=%s", params.DiskDevice, params.OutputPath)
        ) AS result
      FROM scope()


